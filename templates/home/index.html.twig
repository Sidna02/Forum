{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}


    <div class="container min-vh-100">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="container">
            <div class="row ">

                <div class="col-8 forum-wrapper ">
                    {% for forum in forums %}
                        <div class="card section-wrapper ">
                            <div class="card-header ">
                                {{ forum.title }}
                            </div>
                            <div class="card-body ">
                                {% for category in forum.categories %}
                                    {% embed 'home/category-box.html.twig' %}{% endembed %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-4 ">

                    <div class="row justify-content-end ">
                        <div class="widget ">
                            <div class="card ">
                                <div class="card-header ">
                                    Random
                                </div>
                                <div class="card-body ">
                                    <p class="card-text ">Text</p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end ">
                        <div class="widget">
                            <div class="card">
                                <div class="card-header">
                                    Statistiques
                                </div>
                                <div class="card-body ">

                                    <div class="stats-line ">
                                        <span class="stats-header ">Type stats</span>
                                        <span class="stats-info ">Count</span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
    {% embed 'footer.html.twig' %}{% endembed %}
{% endblock %}
